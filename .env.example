# Backend Configuration
# Port for the Go server to listen on
PORT=8080

# Gin mode (debug, release, test)
GIN_MODE=debug

# CORS allowed origins (comma separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File browser root path (be careful with this setting!)
FILE_BROWSER_ROOT=/

# Enable/disable file browser endpoint (true/false)
ENABLE_FILE_BROWSER=true

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Frontend Configuration
# API endpoint for the frontend to connect to
VITE_API_URL=http://localhost:8080

# Base URL for the frontend (useful for deployment)
VITE_BASE_URL=/

# Enable/disable development features
VITE_DEV_MODE=true

